<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:mvc="http://www.jerehao.com/mvc/">

    <!--
        base-package 是包名，不能包含类名等，可以使用通配符{..,**,*,?}
        多个包名使用英文逗号分隔
        多个component-scan 只有第一个生效
    -->
    <component-scan base-package="com.jerehao.devia" />

    <static-resources>
        <resource location="/resources/css/" mapping="/css/**"/>
        <resource location="/resources/js/" mapping="/resources/js/**/"/>
        <resource location="/resources/images/" mapping="/resources/images/**/"/>
    </static-resources>


</beans>